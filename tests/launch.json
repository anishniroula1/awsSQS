{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/usr/src/app"
                }
            ],
            "preLaunchTask": "docker-run" // Add this line
        }
    ]
}


{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-run",
            "type": "shell",
            "command": "docker-compose up --build -d",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}


version: '3'
services:
  python-app:
    build: .
    ports:
      - "5678:5678"
    command: python -m ptvsd --host 0.0.0.0 --port 5678 --wait run_abc.py


